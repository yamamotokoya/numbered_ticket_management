<h5 style="margin-top: 20px;">開園日 <%= @viewing_time.hold_at %></h5>
<h5><%= @viewing_time.program_name %>の回: 予約者一覧 </h5>
<%= render partial: 'search', locals: { viewing_time: @viewing_time } %>
<p style="float: right;">予約者数<%= @viewing_time.users.length%>人</p>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">名前</th>
      <th scope="col">email</th>
      <th scope="col">住所</th>
    </tr>
  </thead>
  <tbody>
    <% if @users %>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td></td>
        </tr>
      <% end %>
    <% else %>
      <% @viewing_time.users.each do |user|  %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td></td>
        </tr>
      <% end %>
      <tr>
    <% end %>
    
  </tbody>
</table>
<% if @users %>
  <button type="button" class="btn btn-dark">
    <%= link_to "戻る", admin_viewing_time_path(@viewing_time), style: "color: white; margin-top: 10px;"%>
  </button>
<% else %>
  <button type="button" class="btn btn-dark">
    <%= link_to "戻る", admin_today_viewing_time_path, style: "color: white; margin-top: 10px;"%>
  </button>
<% end %>